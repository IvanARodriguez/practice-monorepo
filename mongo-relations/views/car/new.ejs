<%layout('/partials/boilerplate')%>
<div class="app-style">
	<aside class="sidebar">
		<ul>
			<li><a href="/cars">CAR SHOW</a></li>
			<li class="selected-link"><a href="/cars/new">CREAR</a></li>
		</ul>
	</aside>
	<section class="create-form">
		<form action="/cars" method="POST">
			<div class="form-control">
				<label for="make">Marca</label>
				<input
					required
					type="text"
					id="make"
					name="car[make]"
					placeholder="Toyota"
				/>
			</div>
			<div class="form-control">
				<label for="model">Modelo</label>
				<input
					required
					type="text"
					id="model"
					name="car[model]"
					placeholder="Corolla"
				/>
			</div>
			<div class="form-control">
				<label for="year">AÃ±o</label>
				<input
					required
					type="number"
					value="2024"
					id="year"
					name="car[year]"
					placeholder="2023"
				/>
			</div>
			<div class="form-control">
				<label for="VIM">Numero de chasis</label>
				<input
					required
					type="text"
					id="VIM"
					minlength="17"
					name="car[vim]"
					placeholder="4Y1SL65848Z411439"
				/>
			</div>
			<div class="form-control">
				<label for="price">Precio</label>
				<input
					required
					type="number"
					value="200"
					id="price"
					name="car[price]"
					placeholder="200"
				/>
			</div>
			<button type="submit" class="submit-btn">Crear</button>
		</form>
		<img src="/imgs/car-ilustration.svg" alt="Car illustration" />
	</section>
</div>
